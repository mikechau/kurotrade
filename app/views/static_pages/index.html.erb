<!-- Carousel
================================================== -->
<div id="myCarousel" class="carousel slide moveup">
  <div class="carousel-inner">
    <div class="item active">
      <img src="/assets/slide-01.jpg" alt="">
      <div class="container">
        <div class="carousel-caption">
          <h1>Welcome to kurotrade.</h1>
          <p class="lead">kurotrade is a flexible portfolio monitoring tool. Whether you are investing as an individual or as an investment group, you can conveniently keep track of you stock portfolio. </p>
          <%= link_to 'Register for closed beta', new_user_url, :class => "btn btn-large btn-primary" %> 
        </div>
      </div>
    </div>
    <div class="item">
      <img src="/assets/slide-02.jpg" alt="">
      <div class="container">
        <div class="carousel-caption">
          <h1>Stock portfolio monitoring.</h1>
          <p class="lead">kurotrade makes stock portfolio monitoring incredibly easy. You simply upload your stock transactions and kurotrade will calculate your daily net asset value. If you're in an investment group you and your partners can each have an account and access the same portfolio dashboard.</p>
          <%= link_to 'Demo', dashboard_url, :class => 'btn btn-large btn-primary' %>
        </div>
      </div>
    </div>
    <div class="item">
      <img src="/assets/slide-03.jpg" alt="">
      <div class="container">
        <div class="carousel-caption">
          <h1>We're just getting started.</h1>
          <p class="lead">More planned features are on the way. We currently support manual transaction entry and Scottrade brokerage transactions via CSV file upload.</p>
          <%= link_to 'Learn more', features_url, :class => 'btn btn-large btn-primary' %>
        </div>
      </div>
    </div>
  </div>
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
</div><!-- /.carousel -->


