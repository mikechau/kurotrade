<h1>Listing transactions</h1>

<%= @date %>

<table>
  <tr>
    <th>Group</th>
    <th>Trade</th>
    <th>Stock symbol</th>
    <th>Trade date</th>
    <th>Settle date</th>
    <th>Quantity</th>
    <th>Price</th>
    <th>Commission</th>
    <th>Fees</th>
    <th>Interest</th>
    <th>Total value</th>
    <th>Description</th>
    <th>Broker</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @transactions.each do |transaction| %>
  <tr>
    <td><%= transaction.group_id %></td>
    <td><%= transaction.trade_id %></td>
    <td><%= transaction.stock_symbol %></td>
    <td><%= transaction.trade_date %></td>
    <td><%= transaction.settle_date %></td>
    <td><%= transaction.quantity %></td>
    <td><%= transaction.price %></td>
    <td><%= transaction.commission %></td>
    <td><%= transaction.fees %></td>
    <td><%= transaction.interest %></td>
    <td><%= number_with_delimiter(transaction.total_value, :precision => 2, :delimiter => ',') %></td>
    <td><%= transaction.description %></td>
    <td><%= transaction.broker %></td>
    <td><%= link_to 'Show', transaction %></td>
    <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
    <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

