<%= form_for(@group, :html => { :class => "form-horizontal"} ) do |f| %>
  <% if @group.errors.any? %>
    <div id="alert alert-error">
      <h2>There are <%= pluralize(@group.errors.count, "error") %> errors:</h2>

      <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li style="color: #B94A48; font-weight: bold;"><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <hr />
  <% end %>

  <fieldset>
    <div class="control-group">
        <%= f.text_field :name, :style => "width: 100%", :placeholder => "name" %>
    </div>
    <div class="control-group">
      <%= f.submit "Submit", :class => "btn btn-large btn-primary pull-right" %>
    </div>
  </fieldset>
<% end %>
